    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
         "allowJs": true,
        "watch": true,
        "lib": [
            "es2015",
            "dom"
